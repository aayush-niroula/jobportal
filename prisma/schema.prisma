

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String   @unique
  phone           String?
  password        String?  
  created_at      DateTime @default(now())
  role_id         String   @db.ObjectId
  role            Role     @relation(fields: [role_id], references: [id])
  userRoles       UserRoles[]
  facilitator     JobFacilitator?   
  seeker          JobSeeker?       
  notifications   Notifications[]
  event_registration EventRegistrations[]

  @@map("User")
}

model Role {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  role_name       String   @unique
  users           User[]
  userRoles       UserRoles[]
  facilitators    JobFacilitator[]
  seekers         JobSeeker[]

  @@map("Roles")
}

model UserRoles {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  user_id  String @db.ObjectId
  role_id  String @db.ObjectId
  user     User @relation(fields: [user_id], references: [id])
  role     Role @relation(fields: [role_id], references: [id])

  @@unique([user_id, role_id])
  @@map("UserRoles")
}

model JobFacilitator {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  company_name    String   
  company_email   String
  user_id         String   @unique @db.ObjectId
  role_id         String   @db.ObjectId
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  user            User     @relation(fields: [user_id], references: [id])
  role            Role     @relation(fields: [role_id], references: [id])
  verification    Facilitator_verification?
  jobs            Jobs[]
  company_description String
  website_link    String
  location        String
  company_location_link String
  industry          String?
  department         String?
  company_size        String?    
  founded_year        Int?
  company_logo    String?
  gallery_images    String[]
  features          String[]
  events            Events[]
 

  @@map("Job_facilitator")
}

model Facilitator_verification {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  facilitator_id    String   @unique @db.ObjectId
  document_url      String
  registration_no   String
  status            String
  submitted_at      DateTime
  facilitator       JobFacilitator @relation(fields: [facilitator_id], references: [id])

  @@map("facilitator_verification")
}

model JobSeeker {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id               String   @unique @db.ObjectId
  role_id               String   @db.ObjectId
  location              String?
  experience_level      ExperienceLevel?
  profile_image         String?
  professional_summary  String?
  technical_skills      String[]
  soft_skills           String[]
  availability          String?
  expected_salary_min   Int?
  expected_salary_max   Int?
  job_type              JobType?
  work_mode             WorkMode?
  resume_url            String?
  linkedin_url          String?
  portfolio_url         String?
  analyzer_vector       String?
  user                  User @relation(fields: [user_id], references: [id])
  role                  Role @relation(fields: [role_id], references: [id])
  experiences           WorkExperience[]
  educations            Education[]
  applications          Applications[]
  recommendations       Recommendations[]
  bookmarks             Bookmarks[]

  @@map("Job_Seeker")
}

model WorkExperience {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  jobseeker_id    String   @db.ObjectId
  role            String
  company         String
  start_date      DateTime
  end_date        DateTime?
  points          String[]
  jobseeker       JobSeeker @relation(fields: [jobseeker_id], references: [id])

  @@map("Work_Experience")
}

model Education {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  jobseeker_id    String   @db.ObjectId
  degree          String
  institution     String
  start_year      Int
  end_year        Int?

  jobseeker       JobSeeker @relation(fields: [jobseeker_id], references: [id])

  @@map("Education")
}


model Job_Category {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  category_name String   @unique
  description  String?
  created_at   DateTime @default(now())
  jobs         Jobs[]

  @@map("Job_Category")
}

model Jobs {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  job_name        String
  created_at      DateTime? @default(now())
  description     String[]
  location        String
  salary          String?
  deadline        DateTime?
  time            DateTime? 
  facilitator_id  String   @db.ObjectId
  category_id     String   @db.ObjectId
  facilitator     JobFacilitator     @relation(fields: [facilitator_id], references: [id])
  category        Job_Category       @relation(fields: [category_id], references: [id])
  applications    Applications[]
  recommendations Recommendations[]
  expirationLog   Job_expiration_log[]
 responsibilities String[]
  requirements    String[]
  preferred_qualifications String[]
  job_type        JobType
  work_mode       WorkMode
  experience_level ExperienceLevel
  salary_min         Int?
  salary_max         Int?
  salary_type        SalaryType
  benefits           String[]
  skills             String[]
  bookmarks          Bookmarks[]
  
  @@map("Jobs")
}

model Bookmarks {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  jobseeker_id  String     @db.ObjectId
  job_id        String     @db.ObjectId
  created_at    DateTime   @default(now())

  jobseeker     JobSeeker  @relation(fields: [jobseeker_id], references: [id])
  job           Jobs       @relation(fields: [job_id], references: [id])
  @@unique([jobseeker_id, job_id])
  @@map("Bookmarks")
}

model Applications {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  job_id          String    @db.ObjectId
  jobseeker_id    String    @db.ObjectId
  status          String
  applied_at      DateTime  @default(now())
  reviewed_at     DateTime?
  message         String?
  job             Jobs      @relation(fields: [job_id], references: [id])
  seeker          JobSeeker @relation(fields: [jobseeker_id], references: [id])
  interviews      Interviews?

  @@map("Applications")
}

model Recommendations {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  jobseeker_id     String   @db.ObjectId  
  job_id          String   @db.ObjectId
  score           Float
  reason          String?
  seeker          JobSeeker @relation(fields: [jobseeker_id], references: [id])
  job             Jobs      @relation(fields: [job_id], references: [id])

  @@map("Recommendations")
}

model Notifications {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id     String   @db.ObjectId
  message     String
  type        String
  is_read     Boolean  @default(false)
  created_at  DateTime @default(now())
  user        User     @relation(fields: [user_id], references: [id])

  @@map("Notifications")
}

model Job_expiration_log {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  job_id      String   @db.ObjectId
  expired_at  DateTime
  job         Jobs     @relation(fields: [job_id], references: [id])

  @@map("Job_expiration_log")
}

model Interviews {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  application_id  String   @unique @db.ObjectId
  scheduled_by    String   @db.ObjectId  
  scheduled_at    DateTime
  interview_type  InterviewType
  meeting_link    String?
  notes           String?
  created_at      DateTime @default(now())
  application     Applications @relation(fields: [application_id], references: [id])
}

model Events{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  facilitator_id String @db.ObjectId
  facilitator  JobFacilitator @relation(fields: [facilitator_id],references: [id])
  title String
  description String
  date  DateTime
  time String
  location String
  capacity Int
  duration String
  category String
  field     String?
  price   String
  prerequisites  String[]
  whatYouWillLearn   String[]
  requirments       String[]

  image_url      String?
  created_at    DateTime @default(now())
  registrations  EventRegistrations[]

  @@map("Events")
}

model EventRegistrations {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  event_id    String   @db.ObjectId
  user_id     String   @db.ObjectId   

  role        String   
  registered_at DateTime @default(now())

  event       Events @relation(fields: [event_id], references: [id])
  user        User   @relation(fields: [user_id], references: [id])

  @@unique([event_id, user_id])
  @@map("Event_Registrations")
}

enum InterviewType {
  ONLINE
  ONSITE
  PHONE
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERN
  FREELANCE
}

enum WorkMode {
  ONSITE
  REMOTE
  HYBRID
}

enum ExperienceLevel {
  ENTRY
  MID
  SENIOR
  LEAD
}

enum SalaryType {
  YEARLY
  MONTHLY
  HOURLY
}
